#include <stdio.h>

#define TABLE_SIZE 7  // mali prost broj za primer

int table[TABLE_SIZE]; // -1 znači prazno

void init_table() {
    for(int i = 0; i < TABLE_SIZE; i++)
        table[i] = -1; // -1 = prazno
}

// Heš funkcija: ostatak pri deljenju
int hash(int key) {
    return key % TABLE_SIZE;
}

// Ubacivanje elementa
void insert(int key) {
    int index = hash(key);
    int start = index;

    while(table[index] != -1) { // dokle god nije prazno
        index = (index + 1) % TABLE_SIZE; // linearno
        if(index == start) { // cela tabela puna
            printf("Tabela je puna, ne moze se ubaciti %d\n", key);
            return;
        }
    }
    table[index] = key;
}

// Pretraga
int search(int key) {
    int index = hash(key);
    int start = index;

    while(table[index] != -1) {
        if(table[index] == key)
            return index; // pronađeno
        index = (index + 1) % TABLE_SIZE;
        if(index == start)
            break; // cela tabela pregledana
    }
    return -1; // nije pronađeno
}

// Štampanje tabele
void print_table() {
    printf("Heš tabela:\n");
    for(int i = 0; i < TABLE_SIZE; i++)
        if(table[i] != -1)
            printf("[%d] -> %d\n", i, table[i]);
        else
            printf("[%d] -> Prazno\n", i);
}

int main() {
    init_table();

    insert(10);
    insert(3);
    insert(17);
    insert(24);

    print_table();

    int key = 17;
    int pos = search(key);
    if(pos != -1)
        printf("Ključ %d pronadjen na poziciji %d\n", key, pos);
    else
        printf("Ključ %d nije pronadjen\n", key);

    return 0;
}